<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Capa 1: degradado diagonal -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/greenGradientStart"
                android:endColor="@color/greenGradientEnd"
                android:angle="135"/>
        </shape>
    </item>

    <!-- Capa 2: blob superior-derecha -->
    <item
        android:width="320dp"
        android:height="320dp"
        android:gravity="top|end"
        android:right="-40dp"
        android:top="-40dp">
        <shape android:shape="oval">
            <solid android:color="@color/greenBlobA"/>
        </shape>
    </item>

    <!-- Capa 3: blob inferior-izquierda -->
    <item
        android:width="380dp"
        android:height="380dp"
        android:gravity="bottom|start"
        android:left="-60dp"
        android:bottom="-60dp">
        <shape android:shape="oval">
            <solid android:color="@color/greenBlobB"/>
        </shape>
    </item>

</layer-list>
