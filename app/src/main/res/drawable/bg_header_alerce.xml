<?xml version="1.0" encoding="utf-8"?>
<!-- Gradiente principal inspirado en bosques y agua del sur -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <gradient
        android:angle="135"
        android:startColor="#2D5F4F"
        android:centerColor="#3A7561"
        android:endColor="#4A7C9E"
        android:type="linear"/>

    <!-- Bordes redondeados inferiores para headers -->
    <corners
        android:bottomLeftRadius="24dp"
        android:bottomRightRadius="24dp"/>
</shape>