<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- base: degradado muy suave -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/greenSoftBgStart"
                android:endColor="@color/greenSoftBgEnd"
                android:angle="135" />
        </shape>
    </item>

    <!-- mancha diagonal clara para darle “onda” -->
    <item android:gravity="top|end">
        <shape android:shape="rectangle">
            <size android:width="320dp" android:height="320dp"/>
            <corners android:radius="48dp"/>
            <gradient
                android:startColor="@color/greenSoftSpot"
                android:endColor="@android:color/transparent"
                android:angle="315" />
        </shape>
    </item>
</layer-list>
