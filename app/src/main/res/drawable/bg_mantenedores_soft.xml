<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Fondo base con degradado suave -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#F5F7F6"
                android:endColor="#EDF5F1"
                android:angle="135"/>
        </shape>
    </item>

    <!-- Círculo decorativo superior derecha -->
    <item
        android:width="280dp"
        android:height="280dp"
        android:gravity="top|end"
        android:right="-60dp"
        android:top="-60dp">
        <shape android:shape="oval">
            <solid android:color="#1A5A9B82"/>
        </shape>
    </item>

    <!-- Círculo decorativo inferior izquierda -->
    <item
        android:width="320dp"
        android:height="320dp"
        android:gravity="bottom|start"
        android:left="-80dp"
        android:bottom="-80dp">
        <shape android:shape="oval">
            <solid android:color="#1A4A7C9E"/>
        </shape>
    </item>

</layer-list>