<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Fondo base oscuro -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#0D1117"
                android:endColor="#161B22"
                android:angle="135"/>
        </shape>
    </item>

    <!-- Círculo decorativo superior derecha -->
    <item
        android:width="280dp"
        android:height="280dp"
        android:gravity="top|end"
        android:right="-60dp"
        android:top="-60dp">
        <shape android:shape="oval">
            <solid android:color="#1A2D5F4F"/>
        </shape>
    </item>

    <!-- Círculo decorativo inferior izquierda -->
    <item
        android:width="320dp"
        android:height="320dp"
        android:gravity="bottom|start"
        android:left="-80dp"
        android:bottom="-80dp">
        <shape android:shape="oval">
            <solid android:color="#1A2D4F6B"/>
        </shape>
    </item>
</layer-list>