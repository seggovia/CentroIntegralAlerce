<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="16dp">

    <!-- Header con gradiente y títulos -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:padding="16dp"
        android:gravity="bottom"
        android:background="@drawable/bg_header_gradient"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre actividad"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"/>

        <TextView
            android:id="@+id/tvTipoYPeriodicidad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tipo • Periodicidad"
            android:alpha="0.95"
            android:textColor="@android:color/white"/>
    </LinearLayout>

    <!-- Contenido -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Chips fecha/hora y lugar -->
        <com.google.android.material.chip.ChipGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.chip.Chip
                android:id="@+id/chFechaHora"
                style="@style/Widget.Material3.Chip.Suggestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="dd/MM/yyyy • HH:mm"
                app:chipIcon="@android:drawable/ic_menu_recent_history"
                app:chipIconVisible="true"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chLugar"
                style="@style/Widget.Material3.Chip.Suggestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lugar"
                app:chipIcon="@android:drawable/ic_menu_mylocation"
                app:chipIconVisible="true"/>
        </com.google.android.material.chip.ChipGroup>

        <!-- Datos importantes -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="12dp"
            app:strokeColor="#E5E7EB"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvTipo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tipo: —"
                    android:textColor="#111827"/>

                <TextView
                    android:id="@+id/tvPeriodicidad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Periodicidad: —"
                    android:textColor="#111827"/>

                <TextView
                    android:id="@+id/tvCupo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Cupo: —"
                    android:textColor="#111827"/>

                <TextView
                    android:id="@+id/tvOferente"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Oferente: —"
                    android:textColor="#111827"/>

                <TextView
                    android:id="@+id/tvSocio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Socio comunitario: —"
                    android:textColor="#111827"/>

                <TextView
                    android:id="@+id/tvBeneficiarios"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Beneficiarios: —"
                    android:textColor="#111827"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Adjuntos -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Adjuntos"
            android:textStyle="bold"
            android:textColor="#111827"/>

        <LinearLayout
            android:id="@+id/llAdjuntos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="4dp"/>

        <!-- Acciones -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnModificar"
                style="?attr/materialButtonOutlinedStyle"
                android:text="Modificar"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"/>

            <Space android:layout_width="8dp" android:layout_height="wrap_content"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnReagendar"
                style="?attr/materialButtonOutlinedStyle"
                android:text="Reagendar"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="8dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAdjuntar"
                android:text="Adjuntar"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                app:backgroundTint="?attr/colorPrimary"
                android:textColor="@android:color/white"/>

            <Space android:layout_width="8dp" android:layout_height="wrap_content"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCancelar"
                android:text="Cancelar"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                app:backgroundTint="@android:color/holo_red_dark"
                android:textColor="@android:color/white"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
