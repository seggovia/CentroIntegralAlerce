<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/surface"
    android:paddingBottom="16dp">

    <!-- Handle del bottom sheet -->
    <View
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bg_sheet_handle"/>

    <!-- Header con gradiente -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:padding="20dp"
        android:gravity="bottom"
        android:background="@drawable/bg_header_gradient"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre actividad"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:maxLines="2"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/tvTipoYPeriodicidad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Tipo • Periodicidad"
            android:textSize="15sp"
            android:alpha="0.9"
            android:textColor="@android:color/white"/>
    </LinearLayout>

    <!-- Contenido -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Chips fecha/hora y lugar -->
        <com.google.android.material.chip.ChipGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <com.google.android.material.chip.Chip
                android:id="@+id/chFechaHora"
                style="@style/Widget.Material3.Chip.Suggestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="dd/MM/yyyy • HH:mm"
                app:chipIcon="@android:drawable/ic_menu_recent_history"
                app:chipIconTint="@color/primary"
                app:chipIconVisible="true"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chLugar"
                style="@style/Widget.Material3.Chip.Suggestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lugar"
                app:chipIcon="@android:drawable/ic_menu_mylocation"
                app:chipIconTint="@color/primary"
                app:chipIconVisible="true"/>
        </com.google.android.material.chip.ChipGroup>

        <!-- Detalles en card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:strokeColor="@color/divider"
            app:strokeWidth="1dp"
            app:cardBackgroundColor="@color/surface">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvTipo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tipo: —"
                    android:textSize="14sp"
                    android:textColor="@color/textPrimary"/>

                <TextView
                    android:id="@+id/tvPeriodicidad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="Periodicidad: —"
                    android:textSize="14sp"
                    android:textColor="@color/textPrimary"/>

                <TextView
                    android:id="@+id/tvCupo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="Cupo: —"
                    android:textSize="14sp"
                    android:textColor="@color/textPrimary"/>

                <TextView
                    android:id="@+id/tvOferente"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="Oferente: —"
                    android:textSize="14sp"
                    android:textColor="@color/textPrimary"/>

                <TextView
                    android:id="@+id/tvSocio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="Socio comunitario: —"
                    android:textSize="14sp"
                    android:textColor="@color/textPrimary"/>

                <TextView
                    android:id="@+id/tvBeneficiarios"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="Beneficiarios: —"
                    android:textSize="14sp"
                    android:textColor="@color/textPrimary"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Adjuntos -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Archivos adjuntos"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@color/textPrimary"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:id="@+id/llAdjuntos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20dp"/>

        <!-- Botones de acción -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnModificar"
                style="?attr/materialButtonOutlinedStyle"
                android:text="Modificar"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                app:cornerRadius="24dp"
                app:strokeColor="@color/primary"
                android:textColor="@color/primary"/>

            <Space
                android:layout_width="12dp"
                android:layout_height="wrap_content"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnReagendar"
                style="?attr/materialButtonOutlinedStyle"
                android:text="Reagendar"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                app:cornerRadius="24dp"
                app:strokeColor="@color/primary"
                android:textColor="@color/primary"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="12dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAdjuntar"
                android:text="Adjuntar"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                app:cornerRadius="24dp"
                app:backgroundTint="@color/primary"
                android:textColor="@android:color/white"/>

            <Space
                android:layout_width="12dp"
                android:layout_height="wrap_content"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCancelar"
                android:text="Cancelar"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                app:cornerRadius="24dp"
                app:backgroundTint="@color/error"
                android:textColor="@android:color/white"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>