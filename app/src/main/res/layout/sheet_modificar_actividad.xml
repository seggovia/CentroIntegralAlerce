<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_mantenedores_soft"
    android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Handle del bottom sheet -->
        <View
            android:layout_width="40dp"
            android:layout_height="4dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/bg_sheet_handle"/>

        <!-- Header con gradiente -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@drawable/bg_header_alerce">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Modificar actividad"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:textColor="@android:color/white"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Edita los datos de la actividad"
                    android:textSize="13sp"
                    android:alpha="0.9"
                    android:textColor="@android:color/white"/>
            </LinearLayout>
        </FrameLayout>

        <!-- Contenido del formulario -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Nombre -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/TextInputLayout.Alerce"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombre *"
                app:startIconDrawable="@android:drawable/ic_menu_edit"
                app:startIconTint="@color/primary"
                app:endIconMode="clear_text">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etNombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textPrimary"
                    android:textSize="16sp"
                    android:inputType="textCapSentences"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Tipo de actividad -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/TextInputLayout.Alerce"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="Tipo de actividad *"
                app:startIconDrawable="@android:drawable/ic_menu_sort_by_size"
                app:startIconTint="@color/primary"
                app:endIconMode="dropdown_menu">

                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:id="@+id/actTipo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textPrimary"
                    android:textSize="16sp"
                    android:inputType="none"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Periodicidad -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/TextInputLayout.Alerce"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="Periodicidad *"
                app:startIconDrawable="@android:drawable/ic_menu_recent_history"
                app:startIconTint="@color/primary"
                app:endIconMode="dropdown_menu">

                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:id="@+id/actPeriodicidad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textPrimary"
                    android:textSize="16sp"
                    android:inputType="none"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Cupo y Días de aviso -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/TextInputLayout.Alerce"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Cupo"
                    app:startIconDrawable="@android:drawable/ic_menu_myplaces"
                    app:startIconTint="@color/primary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etCupo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/textPrimary"
                        android:textSize="16sp"
                        android:inputType="number"/>
                </com.google.android.material.textfield.TextInputLayout>

                <Space
                    android:layout_width="12dp"
                    android:layout_height="wrap_content"/>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/TextInputLayout.Alerce"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Días aviso"
                    app:helperText="Días antes"
                    app:helperTextTextColor="@color/textSecondary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etDiasAviso"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/textPrimary"
                        android:textSize="16sp"
                        android:inputType="number"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <!-- Lugar -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/TextInputLayout.Alerce"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="Lugar"
                app:startIconDrawable="@android:drawable/ic_dialog_map"
                app:startIconTint="@color/primary"
                app:endIconMode="dropdown_menu">

                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:id="@+id/actLugar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textPrimary"
                    android:textSize="16sp"
                    android:inputType="none"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Oferente -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/TextInputLayout.Alerce"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="Oferente"
                app:startIconDrawable="@android:drawable/ic_menu_share"
                app:startIconTint="@color/primary"
                app:endIconMode="dropdown_menu">

                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:id="@+id/actOferente"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textPrimary"
                    android:textSize="16sp"
                    android:inputType="none"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Socio comunitario -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/TextInputLayout.Alerce"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="Socio comunitario"
                app:endIconMode="dropdown_menu">

                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:id="@+id/actSocio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textPrimary"
                    android:textSize="16sp"
                    android:inputType="none"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Beneficiarios -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/TextInputLayout.Alerce"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="Beneficiarios">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etBeneficiarios"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minLines="2"
                    android:gravity="top"
                    android:textColor="@color/textPrimary"
                    android:textSize="16sp"
                    android:inputType="textMultiLine|textCapSentences"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Proyecto -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/TextInputLayout.Alerce"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="Proyecto (opcional)"
                app:endIconMode="dropdown_menu">

                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:id="@+id/actProyecto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textPrimary"
                    android:textSize="16sp"
                    android:inputType="none"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Botón guardar -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnGuardarCambios"
                style="@style/Button.Primary.Alerce"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="28dp"
                android:text="Guardar cambios"
                app:icon="@android:drawable/ic_menu_save"
                app:iconGravity="textStart"/>

            <!-- Espaciador para navbar -->
            <View
                android:layout_width="match_parent"
                android:layout_height="16dp"/>
        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>