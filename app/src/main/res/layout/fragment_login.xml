<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/bg_login_modern">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal"
        android:background="@android:color/transparent">

        <FrameLayout
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:background="@drawable/bg_avatar_circle"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp">

            <TextView
                android:id="@+id/tvAvatarInitials"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="CA"
                android:textStyle="bold"
                android:textSize="24sp"
                android:textColor="@color/greenGradientEnd"/>
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inicia sesión"
            android:textStyle="bold"
            android:textSize="28sp"
            android:letterSpacing="0.02"
            android:textColor="@android:color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bienvenido de nuevo. Introduce tus datos para continuar."
            android:textColor="@android:color/white"
            android:layout_marginTop="6dp"/>

        <!-- Email -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:boxBackgroundMode="filled"
            app:boxCornerRadiusTopStart="22dp"
            app:boxCornerRadiusTopEnd="22dp"
            app:boxCornerRadiusBottomStart="22dp"
            app:boxCornerRadiusBottomEnd="22dp"
            app:boxBackgroundColor="@color/loginFieldBg"
            app:boxStrokeColor="@color/loginFieldBorder"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp"
            app:hintEnabled="true"
            app:hintTextColor="@color/textSecondary">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Email"
                android:inputType="textEmailAddress|textNoSuggestions"
                android:imeOptions="actionNext"
                android:textColor="@android:color/black"
                android:textColorHint="@color/textSecondary"
                android:background="@null"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Password -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:boxBackgroundMode="filled"
            app:boxCornerRadiusTopStart="22dp"
            app:boxCornerRadiusTopEnd="22dp"
            app:boxCornerRadiusBottomStart="22dp"
            app:boxCornerRadiusBottomEnd="22dp"
            app:boxBackgroundColor="@color/loginFieldBg"
            app:boxStrokeColor="@color/loginFieldBorder"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp"
            app:endIconMode="password_toggle"
            app:endIconTint="@color/greenGradientEnd"
            app:hintTextColor="@color/textSecondary">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etPass"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Contraseña"
                android:inputType="textPassword"
                android:imeOptions="actionDone"
                android:textColor="@android:color/black"
                android:textColorHint="@color/textSecondary"
                android:background="@null"/>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tvForgot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿Olvidaste tu contraseña?"
            android:textColor="@android:color/holo_blue_bright"
            android:layout_gravity="end"
            android:layout_marginTop="12dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLogin"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="18dp"
            android:text="Iniciar sesión"
            android:enabled="false"
            app:cornerRadius="28dp"
            app:backgroundTint="@color/greenGradientEnd"
            android:textColor="@android:color/white"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCrearCuenta"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="12dp"
            android:text="Crear cuenta"
            app:cornerRadius="28dp"
            app:strokeWidth="2dp"
            app:strokeColor="@color/greenGradientEnd"
            android:textColor="@android:color/white"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="6dp">

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@color/divider"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  o ingresa con  "
                android:textColor="@android:color/white"/>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@color/divider"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="6dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnGoogle"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:text="G"
                android:textStyle="bold"
                app:cornerRadius="28dp"/>

            <Space android:layout_width="16dp" android:layout_height="wrap_content"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnFacebook"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:text="f"
                android:textStyle="bold"
                app:cornerRadius="28dp"/>

            <Space android:layout_width="16dp" android:layout_height="wrap_content"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnX"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:text="𝕏"
                android:textStyle="bold"
                app:cornerRadius="28dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="28dp">

            <TextView
                android:id="@+id/tvCreateFromLink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:text="¿Aún no tienes una cuenta? " />

            <TextView
                android:id="@+id/tvCreateInlineLink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Crear tu cuenta"
                android:textStyle="bold"
                android:textColor="@android:color/holo_blue_bright"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
