<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_mantenedores_soft">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header con gradiente -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:padding="24dp"
            android:gravity="bottom"
            android:background="@drawable/bg_header_alerce"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre actividad"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:maxLines="2"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/tvTipoYPeriodicidad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Tipo • Periodicidad"
                android:textSize="16sp"
                android:alpha="0.9"
                android:textColor="#FFFFFF"/>
        </LinearLayout>

        <!-- Contenido -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Chips fecha/hora, lugar, estado, proyecto -->
            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipsTop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chFechaHora"
                    style="@style/Widget.Material3.Chip.Assist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="dd/MM/yyyy • HH:mm"
                    app:chipIcon="@android:drawable/ic_menu_recent_history"
                    app:chipIconTint="@color/primary"
                    app:chipBackgroundColor="@color/primary_light"
                    app:chipIconVisible="true"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chLugar"
                    style="@style/Widget.Material3.Chip.Assist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lugar"
                    app:chipIcon="@android:drawable/ic_dialog_map"
                    app:chipIconTint="@color/success"
                    app:chipBackgroundColor="@color/primary_light"
                    app:chipIconVisible="true"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chEstado"
                    style="@style/Widget.Material3.Chip.Assist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Programada"
                    android:visibility="visible"
                    app:chipIcon="@android:drawable/ic_menu_info_details"
                    app:chipIconTint="@color/primary"
                    app:chipBackgroundColor="@color/primary_light"
                    app:chipIconVisible="true"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chProyecto"
                    style="@style/Widget.Material3.Chip.Assist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Proyecto"
                    android:visibility="gone"
                    app:chipIcon="@android:drawable/ic_menu_compass"
                    app:chipIconTint="@color/accent"
                    app:chipBackgroundColor="@color/primary_light"
                    app:chipIconVisible="true"/>
            </com.google.android.material.chip.ChipGroup>

            <!-- Información detallada -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:strokeColor="@color/cardStroke"
                app:strokeWidth="1dp"
                app:cardBackgroundColor="@color/card_surface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Información"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@color/textPrimary"
                        android:layout_marginBottom="12dp"/>

                    <TextView
                        android:id="@+id/tvTipo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tipo: —"
                        android:textSize="15sp"
                        android:textColor="@color/textPrimary"
                        android:paddingVertical="4dp"/>

                    <TextView
                        android:id="@+id/tvPeriodicidad"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Periodicidad: —"
                        android:textSize="15sp"
                        android:textColor="@color/textPrimary"
                        android:paddingVertical="4dp"/>

                    <TextView
                        android:id="@+id/tvCupo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Cupo: —"
                        android:textSize="15sp"
                        android:textColor="@color/textPrimary"
                        android:paddingVertical="4dp"/>

                    <TextView
                        android:id="@+id/tvOferente"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Oferente: —"
                        android:textSize="15sp"
                        android:textColor="@color/textPrimary"
                        android:paddingVertical="4dp"/>

                    <TextView
                        android:id="@+id/tvSocio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Socio comunitario: —"
                        android:textSize="15sp"
                        android:textColor="@color/textPrimary"
                        android:paddingVertical="4dp"/>

                    <TextView
                        android:id="@+id/tvBeneficiarios"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Beneficiarios: —"
                        android:textSize="15sp"
                        android:textColor="@color/textPrimary"
                        android:paddingVertical="4dp"/>

                    <TextView
                        android:id="@+id/tvProyecto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Proyecto: —"
                        android:textSize="15sp"
                        android:textColor="@color/textPrimary"
                        android:paddingVertical="4dp"/>

                    <TextView
                        android:id="@+id/tvAvisoPrevio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Aviso previo: — día(s) antes"
                        android:textSize="15sp"
                        android:textColor="@color/textPrimary"
                        android:paddingVertical="4dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Citas programadas (solo periódicas) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardCitas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:visibility="gone"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:strokeColor="@color/cardStroke"
                app:strokeWidth="1dp"
                app:cardBackgroundColor="@color/card_surface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Citas programadas"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@color/textPrimary"
                        android:layout_marginBottom="8dp"/>

                    <LinearLayout
                        android:id="@+id/llCitas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Historial de cambios -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardHistorial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:visibility="gone"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:strokeColor="@color/cardStroke"
                app:strokeWidth="1dp"
                app:cardBackgroundColor="@color/card_surface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Historial"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@color/textPrimary"
                        android:layout_marginBottom="12dp"/>

                    <TextView
                        android:id="@+id/tvMotivoReagendo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Motivo de reagendo: —"
                        android:textSize="15sp"
                        android:textColor="@color/textPrimary"
                        android:paddingVertical="4dp"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/tvFechaReagendo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Fecha de reagendo: —"
                        android:textSize="15sp"
                        android:textColor="@color/textPrimary"
                        android:paddingVertical="4dp"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/tvMotivoCancelacion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Motivo de cancelación: —"
                        android:textSize="15sp"
                        android:textColor="@color/textPrimary"
                        android:paddingVertical="4dp"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/tvFechaCancelacion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Fecha de cancelación: —"
                        android:textSize="15sp"
                        android:textColor="@color/textPrimary"
                        android:paddingVertical="4dp"
                        android:visibility="gone"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Adjuntos -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:strokeColor="@color/cardStroke"
                app:strokeWidth="1dp"
                app:cardBackgroundColor="@color/card_surface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Archivos adjuntos"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@color/textPrimary"
                        android:layout_marginBottom="8dp"/>

                    <LinearLayout
                        android:id="@+id/llAdjuntos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"/>

                    <TextView
                        android:id="@+id/tvNoAdjuntos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="No hay archivos adjuntos"
                        android:textSize="14sp"
                        android:textColor="@color/textSecondary"
                        android:gravity="center"
                        android:padding="16dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Acciones (fila 1) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnModificar"
                    style="@style/Button.Outlined.Alerce"
                    android:text="MODIFICAR"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_weight="1"
                    app:icon="@android:drawable/ic_menu_edit"
                    app:iconGravity="textStart"/>

                <Space
                    android:layout_width="12dp"
                    android:layout_height="wrap_content"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnReagendar"
                    style="@style/Button.Outlined.Alerce"
                    android:text="REAGENDAR"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_weight="1"
                    app:icon="@android:drawable/ic_menu_recent_history"
                    app:iconGravity="textStart"/>
            </LinearLayout>

            <!-- Acciones (fila 2) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="12dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAdjuntar"
                    style="@style/Button.Primary.Alerce"
                    android:text="ADJUNTAR"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_weight="1"
                    app:backgroundTint="@color/primary"
                    app:icon="@drawable/ic_attach_24"
                    app:iconGravity="textStart"/>

                <Space
                    android:layout_width="12dp"
                    android:layout_height="wrap_content"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCancelar"
                    style="@style/Button.Primary.Alerce"
                    android:text="CANCELAR"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_weight="1"
                    app:backgroundTint="@color/error"
                    app:icon="@android:drawable/ic_menu_close_clear_cancel"
                    app:iconGravity="textStart"/>
            </LinearLayout>

            <!-- Espaciador inferior -->
            <View
                android:layout_width="match_parent"
                android:layout_height="80dp"/>

        </LinearLayout>
    </LinearLayout>
</ScrollView>