<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="🔧 Migración de Roles"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="32dp" />

    <TextView
        android:id="@+id/tvMigrationStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Estado de la migración..."
        android:textSize="16sp"
        android:padding="16dp"
        android:background="@android:color/darker_gray"
        android:layout_marginBottom="32dp"
        android:minHeight="200dp" />

    <Button
        android:id="@+id/btnMigrate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="🚀 Migrar Usuarios"
        android:textSize="18sp"
        android:padding="16dp"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnVerify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="🔍 Verificar Roles"
        android:textSize="18sp"
        android:padding="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="⚠️ RECUERDA: Borra esta Activity después de ejecutar la migración"
        android:textSize="12sp"
        android:textColor="@android:color/holo_red_dark"
        android:gravity="center"
        android:layout_marginTop="32dp" />

</LinearLayout>