<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/surface"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Espaciador superior -->
        <View
            android:layout_width="1dp"
            android:layout_height="40dp"/>

        <!-- Ícono de soporte -->
        <FrameLayout
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:background="@drawable/bg_avatar_circle">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="?"
                android:textStyle="bold"
                android:textSize="48sp"
                android:textColor="@color/avatarText"/>
        </FrameLayout>

        <!-- Título -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Contactar soporte"
            android:textStyle="bold"
            android:textSize="28sp"
            android:letterSpacing="0.02"
            android:textColor="@color/textPrimary"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Describe tu problema y te contactaremos"
            android:textColor="@color/textSecondary"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_marginTop="6dp"/>

        <!-- Email -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilEmailContacto"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:hint="Tu correo electrónico"
            app:boxStrokeColor="@color/primary"
            app:hintTextColor="@color/primary">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etEmailContacto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:textColor="@color/textPrimary"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Tipo de problema (Dropdown) -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilTipoProblema"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Tipo de problema"
            app:boxStrokeColor="@color/primary"
            app:hintTextColor="@color/primary">

            <AutoCompleteTextView
                android:id="@+id/acTipoProblema"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:textColor="@color/textPrimary"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Mensaje -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Describe tu problema"
            app:boxStrokeColor="@color/primary"
            app:hintTextColor="@color/primary">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etMensaje"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:minLines="4"
                android:maxLines="8"
                android:gravity="top"
                android:textColor="@color/textPrimary"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Enviar solicitud -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnEnviarSolicitud"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="24dp"
            android:text="Enviar solicitud"
            android:textSize="16sp"
            android:textStyle="bold"
            android:enabled="false"
            app:cornerRadius="28dp"
            app:backgroundTint="@color/primary"/>

        <!-- Espaciador -->
        <View
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <!-- Volver -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnVolverLogin"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp"
            android:text="Volver a Iniciar Sesión"
            android:textSize="16sp"
            app:cornerRadius="28dp"
            app:strokeColor="@color/primary"
            app:strokeWidth="2dp"
            android:textColor="@color/primary"/>

    </LinearLayout>
</ScrollView>