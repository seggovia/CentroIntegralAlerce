<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="6dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="16dp"
    app:cardElevation="3dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/cardStroke"
    app:cardBackgroundColor="@color/card_surface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Ícono Circular -->
        <FrameLayout
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/bg_icon_circle">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@android:drawable/ic_menu_myplaces"
                app:tint="@color/primary"/>
        </FrameLayout>

        <!-- Info del Beneficiario -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="14dp">

            <TextView
                android:id="@+id/tvNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Juan Pérez"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/textPrimary"
                android:maxLines="1"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/tvInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="juan@example.com • +56 9 1234 5678"
                android:textSize="13sp"
                android:textColor="@color/textSecondary"
                android:maxLines="1"
                android:ellipsize="end"/>
        </LinearLayout>

        <!-- Chip de Estado -->
        <com.google.android.material.chip.Chip
            android:id="@+id/chipActivo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Activo"
            android:textSize="11sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            app:chipMinHeight="28dp"
            app:chipCornerRadius="14dp"
            app:chipStrokeColor="@color/primary_light"
            app:chipStrokeWidth="1dp"
            app:chipBackgroundColor="@color/chipBg"
            android:checkable="false"
            android:clickable="false"/>

        <!-- Botón More (oculto, ya no se usa para acciones) -->
        <ImageButton
            android:id="@+id/btnMore"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="4dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Opciones"
            android:src="@android:drawable/ic_menu_more"
            android:visibility="gone"
            app:tint="@color/textSecondary"/>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>