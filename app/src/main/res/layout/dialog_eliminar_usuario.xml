<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/surface"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="@color/surface"
    app:strokeColor="@color/cardStroke"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="24dp">

        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@android:drawable/ic_menu_delete"
            android:background="@drawable/bg_icon_circle_error"
            android:padding="14dp"
            android:layout_marginEnd="16dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Eliminar Usuario"
                android:textStyle="bold"
                android:textSize="22sp"
                android:textColor="@color/textPrimary"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Esta acción no se puede deshacer"
                android:textSize="14sp"
                android:textColor="@color/textSecondary"/>

        </LinearLayout>

    </LinearLayout>

    <!-- Mensaje de advertencia -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/state_cancelada_bg"
        app:strokeColor="@color/error"
        app:strokeWidth="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@android:drawable/ic_dialog_alert"
                android:background="@drawable/bg_icon_circle_error"
                android:padding="16dp"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⚠️ ADVERTENCIA ⚠️"
                android:textSize="18sp"
                android:textColor="@color/error"
                android:textStyle="bold"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¿Estás seguro de que quieres eliminar al usuario?"
                android:textSize="16sp"
                android:textColor="@color/textPrimary"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/textEmailEliminar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Usuario Ejemplo"
                android:textSize="20sp"
                android:textColor="@color/error"
                android:textStyle="bold"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:id="@+id/textMensajeAdicional"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Esta acción eliminará permanentemente todos los datos del usuario y no se puede deshacer."
                android:textSize="14sp"
                android:textColor="@color/textSecondary"
                android:gravity="center"
                android:lineSpacingExtra="2dp"/>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Botones -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCancelarEliminar"
                style="@style/Button.Outlined.Alerce"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:layout_marginEnd="12dp"
                android:text="Cancelar"
                android:textAllCaps="false"
                android:textSize="16sp"
                app:cornerRadius="28dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnConfirmarEliminar"
                style="@style/Button.Outlined.Alerce"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:text="Eliminar"
                android:textAllCaps="false"
                android:textSize="16sp"
                app:cornerRadius="28dp"
                app:strokeColor="@color/error"
                android:textColor="@color/error"/>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>