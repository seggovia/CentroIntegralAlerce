<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/surface"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Espaciador superior -->
        <View
            android:layout_width="1dp"
            android:layout_height="60dp"/>

        <!-- Ícono de email/lock -->
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@android:drawable/ic_dialog_email"
            android:padding="16dp"
            android:background="@drawable/bg_avatar_circle"
            app:tint="@color/primary"/>

        <!-- Título -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="¿Olvidaste tu contraseña?"
            android:textStyle="bold"
            android:textSize="26sp"
            android:gravity="center"
            android:letterSpacing="0.02"
            android:textColor="@color/textPrimary"/>

        <!-- Descripción -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="No te preocupes, te enviaremos un enlace para recuperarla"
            android:textColor="@color/textSecondary"
            android:textSize="15sp"
            android:gravity="center"
            android:paddingHorizontal="16dp"/>

        <!-- Email -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:hint="Correo electrónico"
            app:boxStrokeColor="@color/primary"
            app:hintTextColor="@color/primary"
            app:startIconDrawable="@android:drawable/ic_dialog_email"
            app:startIconTint="@color/primary">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:textColor="@color/textPrimary"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Botón enviar -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnEnviar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="24dp"
            android:text="Enviar enlace de recuperación"
            android:textSize="16sp"
            android:textStyle="bold"
            android:enabled="false"
            app:cornerRadius="28dp"
            app:backgroundTint="@color/primary"/>

        <!-- Botón volver -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnVolver"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="12dp"
            android:text="Volver al inicio de sesión"
            android:textSize="16sp"
            android:textColor="@color/primary"
            app:cornerRadius="28dp"
            app:strokeColor="@color/primary"
            app:strokeWidth="2dp"/>

        <!-- Espaciador flexible -->
        <View
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <!-- Info adicional -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Revisa tu bandeja de entrada y spam"
                android:textSize="13sp"
                android:textColor="@color/textSecondary"
                android:gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="El enlace expirará en 1 hora"
                android:textSize="13sp"
                android:textColor="@color/textSecondary"
                android:gravity="center"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>