<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_mantenedores_soft">
    <!-- Header -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@drawable/bg_header_alerce">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center"
            android:padding="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mantenedores"
                android:textStyle="bold"
                android:textSize="32sp"
                android:textColor="@android:color/white"
                android:letterSpacing="0.02"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Gestiona los datos del sistema"
                android:textSize="15sp"
                android:alpha="0.9"
                android:textColor="@android:color/white"/>
        </LinearLayout>
    </FrameLayout>

    <!-- Lista de mantenedores -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- ✅ 1. TIPOS DE ACTIVIDAD (ID CORREGIDO) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btnTipos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="16dp"
                app:cardElevation="3dp"
                app:strokeColor="@color/cardStroke"
                app:strokeWidth="1dp"
                app:cardBackgroundColor="@color/card_surface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="18dp"
                    android:gravity="center_vertical">

                    <FrameLayout
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:background="@drawable/bg_icon_circle">

                        <ImageView
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:layout_gravity="center"
                            android:src="@android:drawable/ic_menu_sort_by_size"
                            app:tint="@color/primary"/>
                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tipos de actividad"
                            android:textStyle="bold"
                            android:textSize="17sp"
                            android:textColor="@color/textPrimary"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="Categorías de actividades"
                            android:textSize="13sp"
                            android:textColor="@color/textSecondary"/>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@android:drawable/ic_menu_info_details"
                        app:tint="@color/textSecondary"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- ✅ 2. LUGARES (ID CORREGIDO) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btnLugares"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="16dp"
                app:cardElevation="3dp"
                app:strokeColor="@color/cardStroke"
                app:strokeWidth="1dp"
                app:cardBackgroundColor="@color/card_surface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="18dp"
                    android:gravity="center_vertical">

                    <FrameLayout
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:background="@drawable/bg_icon_circle">

                        <ImageView
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:layout_gravity="center"
                            android:src="@android:drawable/ic_dialog_map"
                            app:tint="@color/primary"/>
                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lugares"
                            android:textStyle="bold"
                            android:textSize="17sp"
                            android:textColor="@color/textPrimary"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="Espacios físicos disponibles"
                            android:textSize="13sp"
                            android:textColor="@color/textSecondary"/>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@android:drawable/ic_menu_info_details"
                        app:tint="@color/textSecondary"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- ✅ 3. OFERENTES (ID CORREGIDO) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btnOferentes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="16dp"
                app:cardElevation="3dp"
                app:strokeColor="@color/cardStroke"
                app:strokeWidth="1dp"
                app:cardBackgroundColor="@color/card_surface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="18dp"
                    android:gravity="center_vertical">

                    <FrameLayout
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:background="@drawable/bg_icon_circle">

                        <ImageView
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:layout_gravity="center"
                            android:src="@android:drawable/ic_menu_share"
                            app:tint="@color/primary"/>
                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Oferentes"
                            android:textStyle="bold"
                            android:textSize="17sp"
                            android:textColor="@color/textPrimary"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="Responsables de actividades"
                            android:textSize="13sp"
                            android:textColor="@color/textSecondary"/>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@android:drawable/ic_menu_info_details"
                        app:tint="@color/textSecondary"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- ✅ 4. SOCIOS COMUNITARIOS (ID CORREGIDO) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btnSocios"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="16dp"
                app:cardElevation="3dp"
                app:strokeColor="@color/cardStroke"
                app:strokeWidth="1dp"
                app:cardBackgroundColor="@color/card_surface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="18dp"
                    android:gravity="center_vertical">

                    <FrameLayout
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:background="@drawable/bg_icon_circle">

                        <ImageView
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:layout_gravity="center"
                            android:src="@android:drawable/ic_menu_myplaces"
                            app:tint="@color/primary"/>
                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Socios comunitarios"
                            android:textStyle="bold"
                            android:textSize="17sp"
                            android:textColor="@color/textPrimary"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="Organizaciones colaboradoras"
                            android:textSize="13sp"
                            android:textColor="@color/textSecondary"/>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@android:drawable/ic_menu_info_details"
                        app:tint="@color/textSecondary"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- ✅ 5. BENEFICIARIOS (ID CORREGIDO) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btnBeneficiarios"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="16dp"
                app:cardElevation="3dp"
                app:strokeColor="@color/cardStroke"
                app:strokeWidth="1dp"
                app:cardBackgroundColor="@color/card_surface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="18dp"
                    android:gravity="center_vertical">

                    <FrameLayout
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:background="@drawable/bg_icon_circle">

                        <ImageView
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:layout_gravity="center"
                            android:src="@android:drawable/ic_menu_myplaces"
                            app:tint="@color/primary"/>
                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Beneficiarios"
                            android:textStyle="bold"
                            android:textSize="17sp"
                            android:textColor="@color/textPrimary"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="Personas beneficiadas"
                            android:textSize="13sp"
                            android:textColor="@color/textSecondary"/>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@android:drawable/ic_menu_add"
                        app:tint="@color/textSecondary"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- ✅ 6. PROYECTOS (ID CORREGIDO) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btnProyectos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="16dp"
                app:cardElevation="3dp"
                app:strokeColor="@color/cardStroke"
                app:strokeWidth="1dp"
                app:cardBackgroundColor="@color/card_surface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="18dp"
                    android:gravity="center_vertical">

                    <FrameLayout
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:background="@drawable/bg_icon_circle">

                        <ImageView
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:layout_gravity="center"
                            android:src="@android:drawable/ic_menu_compass"
                            app:tint="@color/primary"/>
                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Proyectos"
                            android:textStyle="bold"
                            android:textSize="17sp"
                            android:textColor="@color/textPrimary"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="Proyectos del centro"
                            android:textSize="13sp"
                            android:textColor="@color/textSecondary"/>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@android:drawable/ic_menu_info_details"
                        app:tint="@color/textSecondary"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Espaciador -->
            <View
                android:layout_width="match_parent"
                android:layout_height="80dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>