<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mantenedores"
        android:textStyle="bold"
        android:textSize="20sp"
        android:paddingBottom="8dp"/>

    <Button
        android:id="@+id/btnTipos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tipos de actividad" />

    <Button
        android:id="@+id/btnLugares"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lugares"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/btnOferentes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Oferentes"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/btnSocios"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Socios comunitarios"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/btnProyectos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Proyectos"
        android:layout_marginTop="8dp"/>
</LinearLayout>
