<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Días de la semana"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginBottom="12dp"/>

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipGroupDias"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:singleLine="false"
        app:singleSelection="false"
        android:layout_marginBottom="20dp">

        <com.google.android.material.chip.Chip
            android:id="@+id/chipLunes"
            style="@style/Widget.Material3.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lunes"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chipMartes"
            style="@style/Widget.Material3.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Martes"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chipMiercoles"
            style="@style/Widget.Material3.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Miércoles"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chipJueves"
            style="@style/Widget.Material3.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jueves"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chipViernes"
            style="@style/Widget.Material3.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Viernes"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chipSabado"
            style="@style/Widget.Material3.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sábado"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chipDomingo"
            style="@style/Widget.Material3.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Domingo"/>
    </com.google.android.material.chip.ChipGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rango de fechas"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginBottom="12dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Fecha de inicio"
        app:boxBackgroundMode="outline"
        app:endIconMode="custom"
        app:endIconDrawable="@android:drawable/ic_menu_month">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etFechaInicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:clickable="true"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:hint="Fecha de fin"
        app:boxBackgroundMode="outline"
        app:endIconMode="custom"
        app:endIconDrawable="@android:drawable/ic_menu_month">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etFechaFin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:clickable="true"/>
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hora (aplicará a todas las fechas)"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="12dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Hora"
        app:boxBackgroundMode="outline"
        app:endIconMode="custom"
        app:endIconDrawable="@android:drawable/ic_menu_recent_history">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etHoraPeriodicidad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:clickable="true"/>
    </com.google.android.material.textfield.TextInputLayout>

</LinearLayout>