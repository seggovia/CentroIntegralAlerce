<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/background"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ejemplos de Notificaciones"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/textPrimary"
        android:layout_marginBottom="32dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prueba las diferentes funcionalidades del sistema de notificaciones"
        android:textSize="16sp"
        android:textColor="@color/textSecondary"
        android:layout_marginBottom="48dp"
        android:gravity="center" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnTestActividad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Probar Notificación de Actividad"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/primary"
        android:textColor="@android:color/white" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnTestCita"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Probar Notificación de Cita"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/primary"
        android:textColor="@android:color/white" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnTestNotificacionInmediata"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Probar Notificación Inmediata"
        android:layout_marginBottom="32dp"
        android:backgroundTint="@color/primary"
        android:textColor="@android:color/white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Las notificaciones se programarán automáticamente según los días de aviso previo configurados en cada actividad."
        android:textSize="14sp"
        android:textColor="@color/textTertiary"
        android:gravity="center"
        android:padding="16dp"
        android:background="@drawable/bg_form_card" />

</LinearLayout>

