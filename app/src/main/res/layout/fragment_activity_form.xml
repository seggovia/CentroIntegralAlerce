<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fitsSystemWindows="true">

    <!-- Header degradado -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/bg_header_gradient"
        app:title=""
        app:titleCentered="true"
        app:navigationIcon="@android:drawable/ic_menu_close_clear_cancel"
        app:navigationIconTint="@android:color/white" />

    <!-- Título y subtítulo centrados -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nueva actividad"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:letterSpacing="0.02" />

        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Completa los datos para crear"
            android:textSize="15sp"
            android:alpha="0.9"
            android:paddingTop="4dp"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <!-- Contenido scrollable -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="140dp"
        android:clipToPadding="false"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="96dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Card principal del formulario -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="24dp"
                app:cardBackgroundColor="@color/card_surface"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:strokeColor="@color/cardStroke"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Nombre -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Nombre de la actividad *"
                        app:boxBackgroundMode="outline"
                        app:boxStrokeColor="@color/primary"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etNombre"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/textPrimary"
                            android:inputType="textCapSentences" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Tipo de actividad -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilTipo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Tipo de actividad *"
                        android:layout_marginTop="16dp"
                        app:endIconMode="dropdown_menu"
                        app:boxBackgroundMode="outline"
                        app:boxStrokeColor="@color/primary"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp">

                        <com.google.android.material.textfield.MaterialAutoCompleteTextView
                            android:id="@+id/acTipoActividad"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/textPrimary" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Toggle Puntual / Periódica -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Periodicidad"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="@color/textPrimary"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="8dp" />

                    <com.google.android.material.button.MaterialButtonToggleGroup
                        android:id="@+id/tgPeriodicidad"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:singleSelection="true"
                        app:selectionRequired="true"
                        app:checkedButton="@id/btnPuntual">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnPuntual"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:text="Puntual"
                            android:textAllCaps="false"
                            style="?attr/materialButtonOutlinedStyle"
                            app:cornerRadius="20dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnPeriodica"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:text="Periódica"
                            android:textAllCaps="false"
                            style="?attr/materialButtonOutlinedStyle"
                            app:cornerRadius="20dp" />
                    </com.google.android.material.button.MaterialButtonToggleGroup>

                    <!-- Cupo & Lugar -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="16dp">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="Cupo"
                            app:boxBackgroundMode="outline"
                            app:boxStrokeColor="@color/primary"
                            app:boxCornerRadiusTopStart="12dp"
                            app:boxCornerRadiusTopEnd="12dp"
                            app:boxCornerRadiusBottomStart="12dp"
                            app:boxCornerRadiusBottomEnd="12dp">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etCupo"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/textPrimary"
                                android:inputType="number" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <Space
                            android:layout_width="12dp"
                            android:layout_height="wrap_content" />

                        <!-- Lugar como Combo -->
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="Lugar"
                            app:endIconMode="dropdown_menu"
                            app:boxBackgroundMode="outline"
                            app:boxStrokeColor="@color/primary"
                            app:boxCornerRadiusTopStart="12dp"
                            app:boxCornerRadiusTopEnd="12dp"
                            app:boxCornerRadiusBottomStart="12dp"
                            app:boxCornerRadiusBottomEnd="12dp">

                            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                                android:id="@+id/acLugar"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/textPrimary" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                    <!-- Oferente (Combo) -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:hint="Oferente"
                        app:endIconMode="dropdown_menu"
                        app:boxBackgroundMode="outline"
                        app:boxStrokeColor="@color/primary"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp">

                        <com.google.android.material.textfield.MaterialAutoCompleteTextView
                            android:id="@+id/acOferente"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/textPrimary" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Sección Fechas -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fecha y hora"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="@color/textPrimary"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="8dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="Fecha"
                            app:endIconMode="custom"
                            app:endIconDrawable="@android:drawable/ic_menu_month"
                            app:endIconTint="@color/primary"
                            app:boxBackgroundMode="outline"
                            app:boxStrokeColor="@color/primary"
                            app:boxCornerRadiusTopStart="12dp"
                            app:boxCornerRadiusTopEnd="12dp"
                            app:boxCornerRadiusBottomStart="12dp"
                            app:boxCornerRadiusBottomEnd="12dp">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etFecha"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:focusable="false"
                                android:clickable="true"
                                android:textColor="@color/textPrimary" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <Space
                            android:layout_width="12dp"
                            android:layout_height="wrap_content" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="Hora"
                            app:endIconMode="custom"
                            app:endIconDrawable="@android:drawable/ic_menu_recent_history"
                            app:endIconTint="@color/primary"
                            app:boxBackgroundMode="outline"
                            app:boxStrokeColor="@color/primary"
                            app:boxCornerRadiusTopStart="12dp"
                            app:boxCornerRadiusTopEnd="12dp"
                            app:boxCornerRadiusBottomStart="12dp"
                            app:boxCornerRadiusBottomEnd="12dp">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etHora"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:focusable="false"
                                android:clickable="true"
                                android:textColor="@color/textPrimary" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                    <!-- Socio comunitario (Combo) -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:hint="Socio comunitario"
                        app:endIconMode="dropdown_menu"
                        app:boxBackgroundMode="outline"
                        app:boxStrokeColor="@color/primary"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp">

                        <com.google.android.material.textfield.MaterialAutoCompleteTextView
                            android:id="@+id/acSocio"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/textPrimary" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Proyecto (Combo) -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:hint="Proyecto"
                        app:endIconMode="dropdown_menu"
                        app:boxBackgroundMode="outline"
                        app:boxStrokeColor="@color/primary"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp">

                        <com.google.android.material.textfield.MaterialAutoCompleteTextView
                            android:id="@+id/acProyecto"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/textPrimary" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Beneficiarios -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:hint="Beneficiarios"
                        app:boxBackgroundMode="outline"
                        app:boxStrokeColor="@color/primary"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etBeneficiarios"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/textPrimary" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Adjuntos -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/boxAdjuntos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp"
                        app:strokeColor="@color/divider"
                        app:strokeWidth="1dp"
                        app:cardBackgroundColor="@color/chipBg">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="16dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@android:drawable/ic_menu_add"
                                app:tint="@color/primary" />

                            <TextView
                                android:id="@+id/tvAdjuntos"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="12dp"
                                android:text="Agregar archivos adjuntos"
                                android:textSize="14sp"
                                android:textColor="@color/textSecondary" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Botonera inferior -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="16dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCancelar"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_weight="1"
                    android:text="Cancelar"
                    app:cornerRadius="26dp"
                    app:strokeColor="@color/textSecondary"
                    android:textColor="@color/textSecondary" />

                <Space
                    android:layout_width="12dp"
                    android:layout_height="wrap_content" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnGuardar"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_weight="1"
                    android:text="Guardar actividad"
                    android:enabled="false"
                    app:cornerRadius="26dp"
                    app:backgroundTint="@color/primary"
                    android:textColor="@android:color/white" />
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
