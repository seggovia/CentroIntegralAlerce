<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="@drawable/bg_form_card"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    android:gravity="center_vertical">

    <!-- Indicador de no leída -->
    <View
        android:id="@+id/indicatorNoLeida"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:background="@drawable/bg_dot_blue"
        android:layout_marginEnd="12dp" />

    <!-- Contenido principal -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Título y tipo -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="4dp">

            <TextView
                android:id="@+id/tvTituloNotificacion"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Recordatorio de Actividad"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/textPrimary" />

            <TextView
                android:id="@+id/tvTipoNotificacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_chip_light"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp"
                android:text="Recordatorio"
                android:textSize="10sp"
                android:textColor="@color/textSecondary" />

        </LinearLayout>

        <!-- Mensaje -->
        <TextView
            android:id="@+id/tvMensajeNotificacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="La actividad 'Taller de Cocina' está programada para mañana a las 10:00 AM. ¡No olvides asistir!"
            android:textSize="14sp"
            android:textColor="@color/textSecondary"
            android:layout_marginBottom="8dp"
            android:maxLines="3"
            android:ellipsize="end" />

        <!-- Fecha -->
        <TextView
            android:id="@+id/tvFechaNotificacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15/12/2024 09:30"
            android:textSize="12sp"
            android:textColor="@color/textTertiary" />

    </LinearLayout>

    <!-- Icono de tipo -->
    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_bell_24"
        android:alpha="0.6"
        android:layout_marginStart="8dp" />

</LinearLayout>

