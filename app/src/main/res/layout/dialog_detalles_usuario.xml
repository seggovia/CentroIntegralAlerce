<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/surface"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="@color/surface"
    app:strokeColor="@color/cardStroke"
    app:strokeWidth="1dp">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:maxHeight="600dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <ImageView
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@android:drawable/ic_menu_info_details"
                android:background="@drawable/bg_icon_circle"
                android:padding="14dp"
                android:layout_marginEnd="16dp"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Detalles del Usuario"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:textColor="@color/textPrimary"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Información completa del usuario"
                    android:textSize="14sp"
                    android:textColor="@color/textSecondary"/>

            </LinearLayout>

        </LinearLayout>

        <!-- Información del usuario -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/surface"
            app:strokeColor="@color/cardStroke"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Correo electrónico -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="20dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@android:drawable/ic_dialog_email"
                        android:background="@drawable/bg_icon_circle"
                        android:padding="10dp"
                        android:layout_marginEnd="16dp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Correo electrónico"
                            android:textSize="12sp"
                            android:textColor="@color/textSecondary"
                            android:textStyle="bold"
                            android:textAllCaps="true"
                            android:letterSpacing="0.1"/>

                        <TextView
                            android:id="@+id/textDetalleEmail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="usuario@ejemplo.com"
                            android:textSize="18sp"
                            android:textColor="@color/textPrimary"
                            android:textStyle="bold"/>

                    </LinearLayout>

                </LinearLayout>

                <!-- Rol -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="20dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@android:drawable/ic_menu_manage"
                        android:background="@drawable/bg_icon_circle"
                        android:padding="10dp"
                        android:layout_marginEnd="16dp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rol del usuario"
                            android:textSize="12sp"
                            android:textColor="@color/textSecondary"
                            android:textStyle="bold"
                            android:textAllCaps="true"
                            android:letterSpacing="0.1"/>

                        <TextView
                            android:id="@+id/textDetalleRol"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="Usuario"
                            android:textSize="18sp"
                            android:textColor="@color/primary"
                            android:textStyle="bold"/>

                    </LinearLayout>

                </LinearLayout>

                <!-- Estado -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@android:drawable/ic_menu_info_details"
                        android:background="@drawable/bg_icon_circle"
                        android:padding="10dp"
                        android:layout_marginEnd="16dp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Estado de la cuenta"
                            android:textSize="12sp"
                            android:textColor="@color/textSecondary"
                            android:textStyle="bold"
                            android:textAllCaps="true"
                            android:letterSpacing="0.1"/>

                        <TextView
                            android:id="@+id/textDetalleEstado"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="Activo"
                            android:textSize="18sp"
                            android:textColor="@color/success"
                            android:textStyle="bold"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Botón restablecer contraseña -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRestablecerPassword"
            style="@style/Button.Outlined.Alerce"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Enviar correo de restablecimiento"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:layout_marginBottom="12dp"
            app:cornerRadius="28dp"
            app:icon="@android:drawable/ic_dialog_email"
            app:iconGravity="textStart"/>

        <!-- Botón cerrar -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCerrarDetalles"
            style="@style/Button.Primary.Alerce"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Cerrar"
            android:textAllCaps="false"
            android:textSize="16sp"
            app:cornerRadius="28dp"/>

    </LinearLayout>

</ScrollView>

</com.google.android.material.card.MaterialCardView>