<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardEvent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    android:layout_marginHorizontal="4dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:strokeWidth="0dp"
    app:cardBackgroundColor="@android:color/transparent">

    <!-- Contenedor con gradiente -->
    <LinearLayout
        android:id="@+id/containerGradient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/bg_header_gradient">

        <!-- ðŸ”¹ Nueva etiqueta de estado arriba a la derecha -->
        <TextView
            android:id="@+id/tvEstado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:paddingHorizontal="10dp"
            android:paddingVertical="4dp"
            android:text="Programada"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:background="@drawable/bg_status_chip"
            android:layout_marginBottom="6dp"/>

        <!-- Hora -->
        <TextView
            android:id="@+id/tvHora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10:00"
            android:textStyle="bold"
            android:textSize="13sp"
            android:textColor="@android:color/white"
            android:alpha="0.9"/>

        <!-- Nombre actividad -->
        <TextView
            android:id="@+id/tvNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="TÃ­tulo actividad"
            android:textStyle="bold"
            android:textSize="17sp"
            android:textColor="@android:color/white"
            android:maxLines="2"
            android:ellipsize="end"/>

        <!-- Lugar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@android:drawable/ic_menu_mylocation"
                app:tint="@android:color/white"
                android:alpha="0.85"/>

            <TextView
                android:id="@+id/tvLugar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="Lugar"
                android:textSize="14sp"
                android:alpha="0.85"
                android:textColor="@android:color/white"
                android:maxLines="1"
                android:ellipsize="end"/>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
